<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.feature.AssignFeatureActivity">

    <Button
        android:id="@+id/btnShowCategory"
        style="@style/buttonFill"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@id/btnCreateCategory"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Show Categories"
        android:textAllCaps="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnCreateCategory"
        style="@style/buttonFill"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="14dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Create Category"
        android:textAllCaps="false"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCreateCategory"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Create Related Feature "
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etName"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Name"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp" />


            <Spinner
                android:id="@+id/spnFeature"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:drawablePadding="10dp"
                android:dropDownSelector="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Choose Category" />

            <ListView
                android:id="@+id/lvCategories"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btnCreate"
                style="@style/buttonFill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:text="Create">

            </Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>